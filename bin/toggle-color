#!/bin/bash

swap () {
    local tmp_file="tmp.$$"
    mv "$1" "$tmp_file"
    mv "$2" "$1"
    mv "$tmp_file" "$2"
}

swap_vim() {
    color=$(grep -E 'background=(light|dark)' | sed -E 's/.*(dark|light).*/\1/')
    case $color in
        'light')
            color=dark
        ;;
        'dark')
            color=light
        ;;
    esac
    :w

}

swap_termite() {
    config_root="/home/filip/.config/termite/"
    swap "$config_root/config_other" "$config_root/config"
    killall -USR1 termite
}

swap_termite

