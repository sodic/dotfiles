# This is the place for sourcing all third party initialization scripts

# fuzzy finder
# The completion file variable must be defined in the parent script because
# It's difficult to determine the current shell, and by extension the
# appropriate file to source.
if [[ -f "$fzf_completion" ]]; then
    . "$fzf_completion"
    export FZF_DEFAULT_OPTS="--layout=reverse --height 40%"
    export FZF_COMPLETION_TRIGGER='**'
fi

